<Window x:Class="PartRecorder.InputDialog"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:PartRecorder"
        mc:Ignorable="d"
        Title="EnterPartNumber" Height="160" Width="250">
    <Grid>
        <TextBox x:Name="NumberInput" HorizontalAlignment="Left" TextWrapping="Wrap" VerticalAlignment="Top" Width="210" Height="30" FontSize="20" Margin="14,48,10,0"/>
        <Button x:Name="btnOk" Content="Ok" HorizontalAlignment="Left" Margin="99,83,0,0" VerticalAlignment="Top" Height="24" Width="60" FontSize="14" IsDefault="True" Click="btnOk_Click"/>
        <Button x:Name="btnCancel" Content="Cancel" HorizontalAlignment="Left" Margin="164,83,0,0" VerticalAlignment="Top" Width="60" Height="24" FontSize="14" Click="btnCancel_Click"/>
        <Label Content="Enter a part number:" HorizontalAlignment="Left" Margin="10,10,0,0" VerticalAlignment="Top" FontSize="14"/>

    </Grid>
</Window>
